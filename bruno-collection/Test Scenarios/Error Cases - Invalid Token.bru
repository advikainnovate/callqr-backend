meta {
  name: Error Cases - Invalid Token
  type: http
  seq: 2
}

post {
  url: {{apiUrl}}/tokens/validate
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "token": "invalid_token_12345"
  }
}

tests {
  test("Should reject invalid token", function() {
    expect(res.getStatus()).to.equal(400);
  });
  
  test("Should return invalid status", function() {
    expect(res.getBody().valid).to.equal(false);
  });
  
  test("Should not allow call initiation", function() {
    expect(res.getBody().canInitiateCall).to.equal(false);
  });
}