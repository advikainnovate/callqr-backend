# Privacy-Preserving QR-Based Calling System - Backend Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=privacy_qr_calling
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_ENABLE_QUERY_LOGGING=false

# Encryption Configuration
DB_ENCRYPTION_KEY=your-256-bit-encryption-key-in-hex-format-here
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# Authentication Configuration
MFA_ISSUER=Privacy QR Calling
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=100
TOKEN_RATE_LIMIT_MAX=50

# WebRTC Configuration
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
TURN_SERVER_URL=turn:localhost:3478
TURN_USERNAME=user
TURN_PASSWORD=pass

# Security Configuration
ENABLE_CSRF_PROTECTION=true
ENABLE_SQL_INJECTION_PROTECTION=true
ENABLE_XSS_PROTECTION=true
REQUEST_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_BYTES=1048576

# Logging Configuration
LOG_LEVEL=info
ENABLE_SECURITY_LOGGING=true
ENABLE_API_LOGGING=false

# Cleanup Configuration
TOKEN_CLEANUP_INTERVAL_HOURS=24
SESSION_CLEANUP_INTERVAL_HOURS=6
CALL_SESSION_RETENTION_DAYS=30
AUDIT_LOG_RETENTION_DAYS=90